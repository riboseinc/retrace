#!/bin/sh

readonly __progname="$(basename $0)"

errx() {
	echo "${__progname}: $@" >&2
	exit 1
}

usage() {
	echo "usage: ${__progname} [-f configuration file location] <executable>"
	exit 1
}

get_lib_file() {
	readonly fname="$1"

	for path in "${fname}" \
	    "./src/.libs/${fname}" \
	    "../src/.libs/${fname}" \
	    "@libdir@/${fname}" \
	    "/usr/lib/${fname}" \
	    "/usr/lib64/${fname}"; do
		[ ! -f "${path}" ] && \
			continue

		echo "${path}"

		return 0
	done

	return 1
}

[ $# -lt 1  ] && \
	usage

if [ $# -ge 3 -a "$1" = "-f" ]; then
	RETRACE_CONFIG="$2"

	shift 2
fi

if [ "${RETRACE_CONFIG}" ]; then
	[ ! -f "${RETRACE_CONFIG}" ] && \
		errx "cannot open '${RETRACE_CONFIG}'"
fi

readonly libname="libretrace"

if $(uname | grep -q ^Darwin); then
	readonly lib="${libname}.dylib"
	readonly output=$(get_lib_file "${lib}")
	DYLD_FORCE_FLAT_NAMESPACE=1
	DYLD_INSERT_LIBRARIES=${output}
	readonly exports="RETRACE_CONFIG DYLD_FORCE_FLAT_NAMESPACE DYLD_INSERT_LIBRARIES"
else
	readonly lib="${libname}.so"
	readonly output=$(get_lib_file "${lib}")
	LD_PRELOAD=${output}
	readonly exports="RETRACE_CONFIG LD_PRELOAD"
fi

[ ! "${output}" ] && \
	errx "cannot find '${lib}'"

which "$1" >/dev/null 2>&1 || \
	errx "cannot execute '$1'"

export $exports
exec "$@"
